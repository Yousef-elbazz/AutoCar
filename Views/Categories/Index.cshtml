@model IEnumerable<AutoCar.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main orange_heading">Vehicle Categories</h2>
                </div>
            </div>
        </div>

        <div class="row margin_bottom_30">
            <div class="col-md-12">
                <a class="btn btn-success btn-lg" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Add New Category
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-success" role="alert">
                        <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
                    </div>
                </div>
            </div>
        }

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 margin_bottom_30">
                    <div class="card h-100 shadow-sm" style="border-radius: 15px; overflow: hidden; transition: transform 0.3s;">
                        <div class="card-img-top" style="height: 180px; background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); display: flex; align-items: center; justify-content: center;">
                            <i class="fa fa-list" style="font-size: 70px; color: white;"></i>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title text-center" style="color: #f7471c; font-weight: bold;">
                                @item.Name
                            </h4>
                            <hr>
                            <p class="card-text">
                                <i class="fa fa-info-circle"></i> <strong>Description:</strong><br>
                                @(item.Description?.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description ?? "No description available")
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CategoryId" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId" 
                                   onclick="return confirm('Are you sure you want to delete this category?');" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-info text-center" role="alert">
                        <h4><i class="fa fa-info-circle"></i> No categories available yet</h4>
                        <p>Start by adding your first category!</p>
                        <a class="btn btn-success" asp-action="Create">
                            <i class="bi bi-plus-circle"></i> Add New Category
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
    }
    
    .card-text {
        font-size: 14px;
        line-height: 1.6;
    }
    
    .btn-group .btn {
        border-radius: 0;
    }
    
    .btn-group .btn:first-child {
        border-radius: 0 0 0 15px;
    }
    
    .btn-group .btn:last-child {
        border-radius: 0 0 15px 0;
    }
</style>
