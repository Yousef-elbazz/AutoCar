@model AutoCar.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main" style="color: #dc3545;"><i class="fa fa-exclamation-triangle"></i> Delete Category</h2>
                    <p style="color: #666; margin-top: 10px;">Are you sure you want to permanently delete this category?</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <div class="card shadow-lg" style="border-radius: 20px; border: 3px solid #dc3545;">
                    <!-- Warning Header -->
                    <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #ff6b6b 100%); color: white; padding: 25px; text-align: center;">
                        <i class="fa fa-exclamation-circle" style="font-size: 60px; margin-bottom: 15px;"></i>
                        <h4 class="mb-0">Warning: This action cannot be undone!</h4>
                    </div>

                    <div class="card-body" style="padding: 40px;">
                        <!-- Category Info Summary -->
                        <div class="alert" style="background: #fff3cd; border-left: 4px solid #ffc107; padding: 25px; border-radius: 10px; margin-bottom: 30px;">
                            <div class="text-center mb-3">
                                <i class="fa fa-list" style="font-size: 50px; color: #856404;"></i>
                            </div>
                            <h5 style="color: #856404; margin-bottom: 15px; text-align: center;">Category to be deleted:</h5>
                            <h4 style="color: #f7471c; font-weight: bold; text-align: center; margin-bottom: 15px;">@Model.Name</h4>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <hr style="border-color: #856404; opacity: 0.3;">
                                <p class="mb-0" style="color: #856404;"><strong>Description:</strong> @Model.Description</p>
                            }
                        </div>

                        <!-- Confirmation Form -->
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="CategoryId" />
                            
                            <div class="alert alert-danger" role="alert" style="border-radius: 10px;">
                                <i class="fa fa-info-circle"></i> <strong>Please confirm:</strong> Deleting this category may affect all cars assigned to it. This action is permanent and cannot be undone.
                            </div>

                            <hr class="my-4">

                            <!-- Action Buttons -->
                            <div class="d-flex gap-3 justify-content-between">
                                <a class="btn btn-secondary btn-lg" asp-action="Index" style="min-width: 150px;">
                                    <i class="fa fa-times"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg" style="min-width: 200px;" 
                                        onclick="return confirm('Are you absolutely sure you want to delete this category?')">
                                    <i class="fa fa-trash"></i> Delete Permanently
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
