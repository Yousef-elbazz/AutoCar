@model AutoCar.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main orange_heading"><i class="fa fa-info-circle"></i> Category Details</h2>
                    <p style="color: #666; margin-top: 10px;">Complete information about this category</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <div class="card shadow-lg" style="border-radius: 20px; border: none; overflow: hidden;">
                    <!-- Category Icon Header -->
                    <div style="height: 200px; background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); display: flex; align-items: center; justify-content: center;">
                        <i class="fa fa-list" style="font-size: 100px; color: white;"></i>
                    </div>

                    <div class="card-body" style="padding: 40px;">
                        <!-- Category Title -->
                        <div class="text-center mb-4">
                            <h2 style="color: #f7471c; font-weight: bold;">@Model.Name</h2>
                            <p class="text-muted">Category ID: #@Model.CategoryId</p>
                        </div>

                        <hr class="my-4">

                        <!-- Category Details -->
                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <div class="detail-item" style="padding: 25px; background: #f8f9fa; border-radius: 10px;">
                                    <p class="text-muted mb-2"><i class="fa fa-list"></i> Category Name</p>
                                    <h4 style="color: #333; font-weight: bold;">@Model.Name</h4>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="col-md-12 mb-4">
                                    <div class="detail-item" style="padding: 25px; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); border-radius: 10px;">
                                        <p class="text-muted mb-2"><i class="fa fa-info-circle"></i> Description</p>
                                        <p style="color: #555; line-height: 1.8; margin: 0;">@Model.Description</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-12 mb-4">
                                    <div class="alert alert-info" role="alert" style="border-radius: 10px;">
                                        <i class="fa fa-info-circle"></i> No description available for this category.
                                    </div>
                                </div>
                            }
                        </div>

                        <hr class="my-4">

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 justify-content-between">
                            <a class="btn btn-secondary btn-lg" asp-action="Index" style="min-width: 120px;">
                                <i class="fa fa-arrow-left"></i> Back
                            </a>
                            <div class="d-flex gap-2">
                                <a class="btn btn-warning btn-lg" asp-action="Edit" asp-route-id="@Model.CategoryId">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-lg" asp-action="Delete" asp-route-id="@Model.CategoryId">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
