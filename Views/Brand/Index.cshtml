@model IEnumerable<AutoCar.Data.Models.Brand>

@{
    ViewData["Title"] = "Brands";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main orange_heading">Car Brands Collection</h2>
                </div>
            </div>
        </div>

        <div class="row margin_bottom_30">
            <div class="col-md-12">
                <a class="btn btn-success btn-lg" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Add New Brand
                </a>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 margin_bottom_30">
                    <div class="card h-100 shadow-sm" style="border-radius: 15px; overflow: hidden; transition: transform 0.3s;">
                        <div class="card-img-top" style="height: 150px; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); display: flex; align-items: center; justify-content: center;">
                            <i class="fa fa-bookmark" style="font-size: 60px; color: white;"></i>
                        </div>
                        <div class="card-body text-center">
                            <h4 class="card-title" style="color: #f7471c; font-weight: bold; margin-bottom: 20px;">
                                @item.name
                            </h4>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.BrandId" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.BrandId" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.BrandId" 
                                   onclick="return confirm('Are you sure you want to delete this brand?');" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-info text-center" role="alert">
                        <h4><i class="fa fa-info-circle"></i> No brands available yet</h4>
                        <p>Start by adding your first brand!</p>
                        <a class="btn btn-success" asp-action="Create">
                            <i class="bi bi-plus-circle"></i> Add New Brand
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
    }
    
    .btn-group .btn {
        border-radius: 0;
    }
    
    .btn-group .btn:first-child {
        border-radius: 0 0 0 15px;
    }
    
    .btn-group .btn:last-child {
        border-radius: 0 0 15px 0;
    }
</style>
