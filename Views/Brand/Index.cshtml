@model IEnumerable<AutoCar.Data.Models.Brand>

@{
    ViewData["Title"] = "Brands";
}

<!-- Page Header -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Brand List</h1>
            <p class="text-center">
                <a asp-action="Create" class="btn btn-primary btn-lg">Create New Brand</a>
            </p>
        </div>
    </div>

    <!-- Brand Table -->
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.name)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.name)</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Actions">
                                    <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.BrandId" class="btn btn-info btn-sm">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this brand?');">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Optional: Adding a footer -->
<footer class="text-center mt-5 mb-3">
    <p>&copy; 2024 Avalon Motors. All Rights Reserved.</p>
</footer>
