@model AutoCar.Data.Models.Brand

@{
    ViewData["Title"] = "Edit Brand";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main orange_heading"><i class="fa fa-edit"></i> Edit Brand</h2>
                    <p style="color: #666; margin-top: 10px;">Update the brand information</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg" style="border-radius: 20px; border: none;">
                    <div class="card-header" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: white; border-radius: 20px 20px 0 0; padding: 25px;">
                        <h4 class="mb-0"><i class="fa fa-bookmark"></i> Update Brand Information</h4>
                    </div>
                    <div class="card-body" style="padding: 40px;">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input type="hidden" asp-for="BrandId" />

                            <!-- Brand Name -->
                            <div class="mb-4">
                                <label asp-for="name" class="form-label">
                                    <i class="fa fa-bookmark"></i> Brand Name <span class="text-danger">*</span>
                                </label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: white; border: none;">
                                        <i class="fa fa-tag"></i>
                                    </span>
                                    <input asp-for="name" class="form-control" />
                                </div>
                                <span asp-validation-for="name" class="text-danger small"></span>
                            </div>

                            <hr class="my-4">

                            <!-- Buttons -->
                            <div class="d-flex gap-3 justify-content-between">
                                <a class="btn btn-secondary btn-lg" asp-action="Index" style="min-width: 150px;">
                                    <i class="fa fa-times"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg" style="min-width: 150px;">
                                    <i class="fa fa-save"></i> Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
