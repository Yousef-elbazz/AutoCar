@model AutoCar.Data.Models.Brand

@{
    ViewData["Title"] = "Brand Details";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main orange_heading"><i class="fa fa-info-circle"></i> Brand Details</h2>
                    <p style="color: #666; margin-top: 10px;">Complete information about this brand</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg" style="border-radius: 20px; border: none; overflow: hidden;">
                    <!-- Brand Icon Header -->
                    <div style="height: 200px; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); display: flex; align-items: center; justify-content: center;">
                        <i class="fa fa-bookmark" style="font-size: 100px; color: white;"></i>
                    </div>

                    <div class="card-body" style="padding: 40px;">
                        <!-- Brand Name -->
                        <div class="text-center mb-4">
                            <h2 style="color: #f7471c; font-weight: bold;">@Model.name</h2>
                            <p class="text-muted">Brand ID: #@Model.BrandId</p>
                        </div>

                        <hr class="my-4">

                        <!-- Brand Info -->
                        <div class="detail-item" style="padding: 30px; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); border-radius: 15px; text-align: center;">
                            <i class="fa fa-bookmark" style="font-size: 50px; color: #f7471c; margin-bottom: 15px;"></i>
                            <h4 style="color: #333; font-weight: bold;">@Model.name</h4>
                            <p class="text-muted mb-0">Official Brand Name</p>
                        </div>

                        <hr class="my-4">

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 justify-content-between">
                            <a class="btn btn-secondary btn-lg" asp-action="Index" style="min-width: 120px;">
                                <i class="fa fa-arrow-left"></i> Back
                            </a>
                            <div class="d-flex gap-2">
                                <a class="btn btn-warning btn-lg" asp-action="Edit" asp-route-id="@Model.BrandId">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-lg" asp-action="Delete" asp-route-id="@Model.BrandId">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
