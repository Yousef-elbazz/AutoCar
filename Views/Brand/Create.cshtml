@model AutoCar.Data.Models.Brand

@{
    ViewData["Title"] = "Create Brand";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main orange_heading"><i class="fa fa-plus-circle"></i> Create New Brand</h2>
                    <p style="color: #666; margin-top: 10px;">Add a new car brand to your collection</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg" style="border-radius: 20px; border: none;">
                    <div class="card-header" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; border-radius: 20px 20px 0 0; padding: 25px;">
                        <h4 class="mb-0"><i class="fa fa-bookmark"></i> Brand Information</h4>
                    </div>
                    <div class="card-body" style="padding: 40px;">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <!-- Brand Name -->
                            <div class="mb-4">
                                <label asp-for="name" class="form-label">
                                    <i class="fa fa-bookmark"></i> Brand Name <span class="text-danger">*</span>
                                </label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; border: none;">
                                        <i class="fa fa-tag"></i>
                                    </span>
                                    <input asp-for="name" class="form-control" placeholder="e.g., Toyota, BMW, Mercedes" />
                                </div>
                                <span asp-validation-for="name" class="text-danger small"></span>
                                <small class="form-text text-muted mt-2">
                                    <i class="fa fa-info-circle"></i> Enter the official brand name
                                </small>
                            </div>

                            <hr class="my-4">

                            <!-- Buttons -->
                            <div class="d-flex gap-3 justify-content-between">
                                <a class="btn btn-secondary btn-lg" asp-action="Index" style="min-width: 150px;">
                                    <i class="fa fa-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-success btn-lg" style="min-width: 150px;">
                                    <i class="fa fa-save"></i> Create Brand
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
