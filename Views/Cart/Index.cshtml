@model IEnumerable<AutoCar.Cart>

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main orange_heading"><i class="fa fa-shopping-cart"></i> Shopping Cart</h2>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow-sm" style="border-radius: 15px; overflow: hidden;">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                                        <tr>
                                            <th>Item</th>
                                            <th>User</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <i class="fa fa-shopping-basket"></i> Cart Item #@item.CartId
                                                </td>
                                                <td>
                                                    <i class="fa fa-user"></i> @(item.User?.UserName ?? "Guest")
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.CartId" title="Edit">
                                                            <i class="bi bi-pencil-square"></i> Edit
                                                        </a>
                                                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.CartId" title="Details">
                                                            <i class="bi bi-eye"></i> Details
                                                        </a>
                                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CartId" 
                                                           onclick="return confirm('Are you sure you want to remove this item?');" title="Delete">
                                                            <i class="bi bi-trash"></i> Remove
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="row">
                                <div class="col-md-6">
                                    <a asp-action="Create" class="btn btn-success">
                                        <i class="bi bi-plus-circle"></i> Add New Item
                                    </a>
                                </div>
                                <div class="col-md-6 text-right">
                                    <button class="btn btn-primary" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                                        <i class="fa fa-credit-card"></i> Proceed to Checkout
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow-sm text-center" style="border-radius: 15px; padding: 60px 20px;">
                        <div style="font-size: 100px; color: #e0e0e0; margin-bottom: 20px;">
                            <i class="fa fa-shopping-cart"></i>
                        </div>
                        <h3 style="color: #666;">Your Cart is Empty</h3>
                        <p style="color: #999; margin-bottom: 30px;">Start adding cars to your cart to see them here!</p>
                        <div>
                            <a asp-controller="Car" asp-action="Index" class="btn btn-primary btn-lg" style="margin-right: 10px;">
                                <i class="fa fa-car"></i> Browse Cars
                            </a>
                            <a asp-action="Create" class="btn btn-success btn-lg">
                                <i class="bi bi-plus-circle"></i> Add Item
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .table tbody tr {
        transition: all 0.3s ease;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
    }
    
    .btn-group .btn {
        margin: 0 2px;
    }
</style>
