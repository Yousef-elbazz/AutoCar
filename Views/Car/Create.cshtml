@model AutoCar.Car

@{
    ViewData["Title"] = "Create Car";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main orange_heading"><i class="fa fa-plus-circle"></i> Create New Car</h2>
                    <p style="color: #666; margin-top: 10px;">Fill in the details below to add a new car to your inventory</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-lg" style="border-radius: 20px; border: none;">
                    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 20px 20px 0 0; padding: 25px;">
                        <h4 class="mb-0"><i class="fa fa-car"></i> Car Information</h4>
                    </div>
                    <div class="card-body" style="padding: 40px;">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="row">
                                <!-- Brand -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="BrandId" class="form-label">
                                        <i class="fa fa-bookmark"></i> Brand <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId">
                                        <option value="">-- Select Brand --</option>
                                    </select>
                                    <span asp-validation-for="BrandId" class="text-danger small"></span>
                                </div>

                                <!-- Model -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Model" class="form-label">
                                        <i class="fa fa-car"></i> Model <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Model" class="form-control" placeholder="e.g., Camry, Accord" />
                                    <span asp-validation-for="Model" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row">
                                <!-- Category -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="CategoryId" class="form-label">
                                        <i class="fa fa-list"></i> Category <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>

                                <!-- Year -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Year" class="form-label">
                                        <i class="fa fa-calendar"></i> Year <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Year" class="form-control" type="number" placeholder="e.g., 2024" />
                                    <span asp-validation-for="Year" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Price -->
                            <div class="mb-4">
                                <label asp-for="Price" class="form-label">
                                    <i class="fa fa-dollar"></i> Price <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text" style="background: linear-gradient(135deg, #f7471c 0%, #ff6b6b 100%); color: white; border: none;">
                                        <i class="fa fa-dollar"></i>
                                    </span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <!-- Description -->
                            <div class="mb-4">
                                <label asp-for="Description" class="form-label">
                                    <i class="fa fa-info-circle"></i> Description
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter detailed description about the car..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <hr class="my-4">

                            <!-- Buttons -->
                            <div class="d-flex gap-3 justify-content-between">
                                <a class="btn btn-secondary btn-lg" asp-action="Index" style="min-width: 150px;">
                                    <i class="fa fa-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-success btn-lg" style="min-width: 150px;">
                                    <i class="fa fa-save"></i> Create Car
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
