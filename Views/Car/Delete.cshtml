@model AutoCar.Car

@{
    ViewData["Title"] = "Delete Car";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main" style="color: #dc3545;"><i class="fa fa-exclamation-triangle"></i> Delete Car</h2>
                    <p style="color: #666; margin-top: 10px;">Are you sure you want to permanently delete this car?</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-lg" style="border-radius: 20px; border: 3px solid #dc3545;">
                    <!-- Warning Header -->
                    <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #ff6b6b 100%); color: white; padding: 25px; text-align: center;">
                        <i class="fa fa-exclamation-circle" style="font-size: 60px; margin-bottom: 15px;"></i>
                        <h4 class="mb-0">Warning: This action cannot be undone!</h4>
                    </div>

                    <div class="card-body" style="padding: 40px;">
                        <!-- Car Info Summary -->
                        <div class="alert" style="background: #fff3cd; border-left: 4px solid #ffc107; padding: 20px; border-radius: 10px; margin-bottom: 30px;">
                            <h5 style="color: #856404; margin-bottom: 15px;"><i class="fa fa-car"></i> Car to be deleted:</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Brand:</strong> @(Model.Brand?.name ?? "N/A")</p>
                                    <p class="mb-2"><strong>Model:</strong> @Model.Model</p>
                                    <p class="mb-2"><strong>Year:</strong> @Model.Year</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Category:</strong> @(Model.Category?.Name ?? "N/A")</p>
                                    <p class="mb-2"><strong>Price:</strong> $@Model.Price.ToString("N0")</p>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <hr style="border-color: #856404; opacity: 0.3;">
                                <p class="mb-0"><strong>Description:</strong> @Model.Description</p>
                            }
                        </div>

                        <!-- Confirmation Form -->
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="CarId" />
                            
                            <div class="alert alert-danger" role="alert" style="border-radius: 10px;">
                                <i class="fa fa-info-circle"></i> <strong>Please confirm:</strong> By clicking "Delete Permanently", this car will be removed from your inventory and cannot be recovered.
                            </div>

                            <hr class="my-4">

                            <!-- Action Buttons -->
                            <div class="d-flex gap-3 justify-content-between">
                                <a class="btn btn-secondary btn-lg" asp-action="Index" style="min-width: 150px;">
                                    <i class="fa fa-times"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg" style="min-width: 200px;" 
                                        onclick="return confirm('Are you absolutely sure you want to delete this car? This cannot be undone!')">
                                    <i class="fa fa-trash"></i> Delete Permanently
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
