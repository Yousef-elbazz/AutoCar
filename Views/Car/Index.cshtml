@model IEnumerable<AutoCar.Car>

@{
    ViewData["Title"] = "Car Listings";
}

<div class="section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full center margin_bottom_30">
                    <h2 class="heading_main orange_heading">Our Premium Cars Collection</h2>
                </div>
            </div>
        </div>

        <div class="row margin_bottom_30">
            <div class="col-md-12">
                <a class="btn btn-success btn-lg" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Add New Car
                </a>
            </div>
        </div>

        <div class="row">
            @foreach (var car in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 margin_bottom_30">
                    <div class="card h-100 shadow-sm" style="border-radius: 15px; overflow: hidden; transition: transform 0.3s;">
                        <div class="card-img-top" style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center;">
                            <i class="fa fa-car" style="font-size: 80px; color: white;"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title" style="color: #f7471c; font-weight: bold;">
                                @(car.Brand?.name ?? "Unknown Brand")
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">@car.Model</h6>
                            <hr>
                            <div class="car-details">
                                <p class="mb-2">
                                    <i class="fa fa-calendar"></i> <strong>Year:</strong> @car.Year
                                </p>
                                <p class="mb-2">
                                    <i class="fa fa-tag"></i> <strong>Category:</strong> @(car.Category?.Name ?? "N/A")
                                </p>
                                <p class="mb-2">
                                    <i class="fa fa-info-circle"></i> <strong>Description:</strong><br>
                                    @(car.Description?.Length > 50 ? car.Description.Substring(0, 50) + "..." : car.Description)
                                </p>
                                <h4 style="color: #f7471c; font-weight: bold;">
                                    <i class="fa fa-dollar"></i> @car.Price.ToString("N0")
                                </h4>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@car.CarId" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@car.CarId" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@car.CarId" 
                                   onclick="return confirm('Are you sure you want to delete this car?');" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-info text-center" role="alert">
                        <h4><i class="fa fa-info-circle"></i> No cars available yet</h4>
                        <p>Start by adding your first car to the collection!</p>
                        <a class="btn btn-success" asp-action="Create">
                            <i class="bi bi-plus-circle"></i> Add New Car
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
    }
    
    .car-details p {
        font-size: 14px;
        line-height: 1.6;
    }
    
    .btn-group .btn {
        border-radius: 0;
    }
    
    .btn-group .btn:first-child {
        border-radius: 0 0 0 15px;
    }
    
    .btn-group .btn:last-child {
        border-radius: 0 0 15px 0;
    }
</style>
